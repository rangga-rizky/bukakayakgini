<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_font"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:text="Join Request &#34; Mbak Mbak cantik &#34;"/>


    <EditText
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:lines="8"
        android:id="@+id/editPesan"
        android:layout_below="@+id/txtTitleDialog"
        android:layout_width="match_parent"
        android:minLines="6"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:scrollbars="vertical"
        android:background="@color/white"/>


    <LinearLayout
        android:layout_below="@+id/editPesan"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="0.5"
            android:id="@+id/btnBatal"
            android:layout_width="fill_parent"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Batal"
            android:layout_marginRight="4dp"
            android:textColor="@color/black" />

        <Button
            android:layout_weight="0.5"
            android:layout_marginLeft="4dp"
            android:id="@+id/btnJoinDialog"
            android:layout_width="fill_parent"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_rounded_button"
            android:text="Kirim Permintaan"
            android:textColor="@color/white" />

    </LinearLayout>



</RelativeLayout>