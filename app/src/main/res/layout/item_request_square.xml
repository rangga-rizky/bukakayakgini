<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="151dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_content"
        android:layout_width="151dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:id="@+id/imgAva"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/avatar"/>

        <TextView
            android:id="@+id/txtNama"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/imgAva"
            android:layout_toRightOf="@+id/imgAva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rangga rizky"
            android:textColor="@color/font"/>

        <TextView
            android:id="@+id/txtket"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/txtNama"
            android:textSize="9sp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/imgAva"
            android:layout_toRightOf="@+id/imgAva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="juga sedang mencari.."/>

        <ImageView
            android:layout_below="@+id/txtket"
            android:id="@+id/imgBarang"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy"
            android:layout_width="150dp"
            android:layout_height="150dp" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/txtTitle"
            android:layout_below="@+id/imgBarang"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
