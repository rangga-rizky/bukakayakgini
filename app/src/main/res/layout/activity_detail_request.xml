<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            app:expandedTitleTextAppearance="@style/TransparentText"
            app:titleTextAppearance="@style/TransparentText"
            app:collapsedTitleTextAppearance="@style/TransparentText"
            android:id="@+id/toolbar_layout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppToolbar"
            android:elevation="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <ImageView
                android:id="@+id/imgBarang"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/dummy"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:theme="@style/AppToolbar"
                android:elevation="0dp"
                app:titleTextAppearance="@style/ToolbarTitle"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_above="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:textSize="18sp"
                            android:textColor="@color/font"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"/>

                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font"
                                android:layout_centerVertical="true"
                                android:text="Status"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/textStatus"
                                android:id="@+id/txtStatus"
                                android:text=""
                                android:textColor="@color/font"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/border"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                android:textSize="12sp"
                                android:layout_toRightOf="@+id/textStatus" />




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="10sp"
                                android:layout_below="@+id/txtTawaran"
                                android:id="@+id/textTawaran"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TAWARAN"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/title_font"
                                android:id="@+id/txtTawaran"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"/>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="10sp"
                                android:id="@+id/textUserJoin"
                                android:layout_below="@+id/txtUserJoin"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="USER JOIN"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/title_font"
                                android:id="@+id/txtUserJoin"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"/>

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"/>

                    <RelativeLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/deskrips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/font"
                            android:text="Deskripsi"/>

                        <TextView
                            android:id="@+id/txtDeskripsi"
                            android:layout_marginTop="6dp"
                            android:layout_below="@+id/deskrips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text=""/>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/spesifikasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/font"
                            android:text="Spesifikasi"/>

                        <TextView
                            android:id="@+id/kategori"
                            android:layout_marginTop="6dp"
                            android:layout_below="@+id/spesifikasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text="Kategori"/>

                        <TextView
                            android:id="@+id/txtKategori"
                            android:layout_marginTop="6dp"
                            android:layout_toEndOf="@+id/budget"
                            android:layout_below="@+id/spesifikasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text=""
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/budget" />

                        <TextView
                            android:id="@+id/kondisi"
                            android:layout_below="@+id/kategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text="Kondisi"/>

                        <TextView
                            android:id="@+id/txtKondisi"
                            android:layout_toEndOf="@+id/budget"
                            android:layout_below="@+id/kategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text=""
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/budget" />

                        <TextView
                            android:id="@+id/budget"
                            android:layout_below="@+id/kondisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text="Maksimal Budget"/>

                        <TextView
                            android:id="@+id/txtbudget"
                            android:layout_toEndOf="@id/budget"
                            android:layout_below="@+id/kondisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font"
                            android:text=""
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@id/kategori" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"/>

                    <TextView
                        android:id="@+id/texttawarkan"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:text="Barang yang saya tawarkan :"/>


                    <android.support.v7.widget.RecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/item_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        app:layoutManager="LinearLayoutManager"
                        android:visibility="gone">
                    </android.support.v7.widget.RecyclerView>



                </LinearLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/footer"
            app:layout_behavior="com.example.ranggarizky.bukakayakgini.util.FixedBottomViewBehavior"
            android:padding="16dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTawar2"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_rounded_button"
                android:text="Tawarkan Barang Sekarang"
                android:textColor="@color/white" />

        </LinearLayout>



</android.support.design.widget.CoordinatorLayout>