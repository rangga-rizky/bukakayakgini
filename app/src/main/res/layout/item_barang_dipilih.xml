<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:id="@+id/content"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/utama"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgBarang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dummy"/>

        <TextView
            android:layout_toEndOf="@+id/imgBarang"
            android:layout_toRightOf="@+id/imgBarang"
            android:id="@+id/txtTitle"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_toStartOf="@+id/txtStatus"
            android:layout_toLeftOf="@+id/txtStatus"
            android:textColor="@color/white"
            android:text="Judul" />

        <RatingBar
            android:layout_toEndOf="@+id/imgBarang"
            android:layout_toRightOf="@+id/imgBarang"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/rating"
            android:layout_below="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:rating="3"
            android:progressTint="@color/yellow"
            android:layout_marginBottom="6dp"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:id="@+id/txtuserCount"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/rating"
            android:layout_toRightOf="@+id/rating"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="6dp"
            android:text="(12)" />



        <TextView
            android:layout_below="@+id/rating"
            android:layout_toEndOf="@+id/imgBarang"
            android:layout_toRightOf="@+id/imgBarang"
            android:id="@+id/txtHarga"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/txtDate"
            android:layout_toLeftOf="@+id/txtDate"
            android:textColor="@color/white"
            android:text="Rp.50.000" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/check_circle_white"
                android:layout_alignParentRight="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>